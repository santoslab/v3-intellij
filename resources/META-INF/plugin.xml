<idea-plugin version="2">
    <id>org.sireum.intellij</id>
    <name>Sireum</name>
    <version>1.0</version>
    <vendor email="robby@santoslab.org" url="http://santoslab.org">SAnToS Lab</vendor>

    <description><![CDATA[
        <a href="http://sireum.org">Sireum</a> is a software analysis platform being
        developed at SAnToS Laboratory, Kansas State University.
        This plugin integrates Sireum tools such as the Logika natural deduction proof
        checker for propositional, predicate, and programming logic into IntelliJ 15.
    ]]></description>

    <change-notes><![CDATA[

    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="143.1184"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="foo" class="org.sireum.intellij.logika.action.LogikaCheckAction" text="Check Logika Proof"
                description="Check Logika Proof">
            <add-to-group group-id="RunnerActions" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl L"/>
        </action>
    </actions>

    <application-components>
        <component>
            <implementation-class>org.sireum.intellij.SireumApplicationComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>